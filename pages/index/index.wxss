/**index.wxss**/
.home {
  position: relative;
}
.header {
  padding: 16rpx 32rpx;
  height: 110rpx;
}
.container {
  background-color: #fafafa;
  border-radius: 80rpx;
  margin-top: -60rpx;
  min-height: 100vh;
  padding: 32rpx;
}
.search {
  margin-top: 12rpx;
  height: 80rpx;
  position: relative;
  border-radius: 40rpx;
}
.search icon {
  position: absolute;
  left: 30rpx;
  top: 45%;
  transform: translateY(-50%);
}
.search input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding-left: 80rpx;
}

.task-card {
  background-color: #FFF8E1;
  border-radius: 24rpx;
  padding: 8rpx;
}
.task-card .icon-hongbao {
  font-size: 96rpx;
}
.task-card .icon-jinbi {
  color: #FCD246;
  margin-left: 24rpx;
}
.task-card button {
  background-color: #FF4A26;
  margin-top: 20rpx;
  margin-right: 16rpx;
  font-size: 30rpx;
}
.recommend-list {
  width: 33.333%;
}
.recommend-list .content {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
}
.recommend-list .content image {
  height: 200rpx;
  width: 100%;
  border-radius: 30rpx;
}
